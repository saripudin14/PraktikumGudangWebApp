@model GudangWebApp.Models.Barang

<h2>Tambah Barang</h2>

<form asp-action="Create" method="post">
    <div class="mb-2">
        <label asp-for="KodeBarang" class="form-label"></label>
        <input asp-for="KodeBarang" class="form-control" />
        <span asp-validation-for="KodeBarang" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="NamaBarang" class="form-label"></label>
        <input asp-for="NamaBarang" class="form-control" />
        <span asp-validation-for="NamaBarang" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="JumlahStok" class="form-label"></label>
        <input asp-for="JumlahStok" class="form-control" type="number" />
        <span asp-validation-for="JumlahStok" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Kategori" class="form-label"></label>
        <input asp-for="Kategori" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Simpan</button>
    <a asp-action="Index" class="btn btn-secondary">Kembali</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
